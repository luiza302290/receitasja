<PrimeiraTela>:
    name: 'primeira_tela'
    MDFloatLayout:
        MDCard:
            style: 'filled'
            size_hint: (1, 1)    
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            FitImage:
                source: 'fotoinicial.jpg'
                allow_stretch: True
                keep_ratio: False
        MDFillRoundFlatButton:
            text: 'Início'
            bold: True
            text_color: 0,0,0,1
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            size_hint_x: .5
            md_bg_color: '73D346'
            elevation: 0
            on_release: 
                root.manager.current = 'homescreen'
                root.manager.transition.direction = 'left'

<HomeScreen>:
    name: 'homescreen'
    md_bg_color: 'BA55D3'
    MDFloatLayout:
        MDTopAppBar:
            pos_hint: {'center_x': 0.5, 'center_y': 0.967}
            elevation: 0
            md_bg_color: '73D346'
        MDLabel:
            text: 'Receitas Já'
            bold: True
            halign: 'center'
            font_size: dp(20)
            pos_hint: {'center_x': 0.5, 'center_y': 0.9566}
            theme_text_color: 'Custom'
            text_color: 1, 1, 1 ,1
        ScrollView:
            do_scroll_x: False
            pos_hint: {'center_x': 0.5, 'center_y': 0.51}
            size_hint: 1, 0.8
            MDBoxLayout:
                orientation: 'vertical'
                padding: dp(10)
                spacing: dp(20)
                adaptive_height: True
                MDLabel:
                    text: 'Bolo'
                    bold: True
                    halign: 'left'
                    font_size: dp(18)
                    theme_text_color: 'Custom'
                    text_color: 1, 1, 1 ,1
                MDCard:
                    size_hint: None, None
                    size: dp(280), dp(160)
                    orientation: 'vertical'
                    spacing: dp(10)
                    halign: 'center'
                    on_release: 
                        root.manager.current = 'bolo'
                        root.manager.transition.direction = 'left'
                        
                    FitImage:
                        source: 'bolo.jpg'
                        allow_stretch: True
                        keep_ratio: False
                        size_hint: 1, 1
                        radius: 15
                MDLabel:
                    text: 'Cookies'
                    bold: True
                    halign: 'left'
                    font_size: dp(18)
                    theme_text_color: 'Custom'
                    text_color: 1, 1, 1 ,1
                MDCard:
                    size_hint: None, None
                    size: dp(280), dp(160)
                    orientation: 'vertical'
                    spacing: dp(10)
                    on_release: 
                        root.manager.current = 'cookies'
                        root.manager.transition.direction = 'left'
                    FitImage:
                        source: 'cookies.png'
                        allow_stretch: True
                        keep_ratio: False
                        size_hint: 1, 1
                        radius: 15
                MDLabel:
                    text: 'Macarrons'
                    bold: True
                    halign: 'left'
                    font_size: dp(18)
                    theme_text_color: 'Custom'
                    text_color: 1, 1, 1 ,1
                MDCard:
                    size_hint: None, None
                    size: dp(280), dp(160)
                    orientation: 'vertical'
                    spacing: dp(10)
                    on_release: 
                        root.manager.current = 'macarrons'
                        root.manager.transition.direction = 'left'
                    FitImage:
                        source: 'macarrons.png'
                        allow_stretch: True
                        keep_ratio: False
                        size_hint: 1, 1
                        radius: 15
                MDLabel:
                    text: 'Brownie'
                    bold: True
                    halign: 'left'
                    font_size: dp(18)
                    theme_text_color: 'Custom'
                    text_color: 1, 1, 1 ,1
                MDCard:
                    size_hint: None, None
                    size: dp(280), dp(160)
                    orientation: 'vertical'
                    spacing: dp(10)
                    on_release: 
                        root.manager.current = 'brownie'
                        root.manager.transition.direction = 'left'
                    FitImage:
                        source: 'brownie.png'
